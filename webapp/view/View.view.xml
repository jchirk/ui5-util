<mvc:View controllerName="ui5.util.ui5-util.controller.View" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Input value="{InputModel>/value}" description="{InputModel>/description}" showValueHelp="true" valueHelpOnly="true"
							valueHelpRequest="onValueHelpDialog"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>